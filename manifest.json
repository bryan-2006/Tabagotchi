{
  "manifest_version": 3,
  "name": "Tabagotchi",
  "version": "1.0",
  "description": "A Chrome extension where you can take care of your own virtual pet!",

  "action": {
    "default_icon": "assets/controller.png",
    "default_popup": "src/popup.html"
  },

  "permissions": ["activeTab", "tabs"],

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/build/main.js"]
    }
  ]
}
